<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="container">
  <div class="row">
    <%= form_for(:session, url: login_path) do |f| %>
      <%# render 'shared/error_messages' %>
      <div class="row">
        <%= f.text_field :email, placeholder: "email", class: 'login-form', placeholder: 'email' %>
      </div>
      <div class="row">
        <%= f.password_field :password, placeholder: "password", class: 'login-form', placeholder: 'password' %>
      </div>
      <div class="row">
        <%= f.submit "Send" %>
      </div>
    <% end %>
    Not registered? <%= link_to "Sign up", signup_path %></p>
  </div>
</div>
